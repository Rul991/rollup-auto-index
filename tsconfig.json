{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "lib": ["ES2021"],
        "noEmitOnError": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}